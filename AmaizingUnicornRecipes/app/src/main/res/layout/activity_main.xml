<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/main_drawer_layout"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">




    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Menu"
            android:textSize="50dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="pantry"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pantry"
            android:id="@+id/goToPantry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/textView2" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_weight="1"
            android:id="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/goToPantry" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Ingredients"
            android:id="@+id/to_edit_ingredients_button"
            android:layout_marginTop="65dp"
            android:layout_below="@+id/profile"
            android:layout_alignEnd="@+id/profile"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <!--<ListView-->
        <!--android:id="@+id/mainList"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="left"-->
        <!--android:entries="@array/drawer_list"-->
        <!-->-->
    <!--</ListView>-->

    <ListView android:id="@+id/nav_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:entries="@array/drawer_list"
        android:background="@color/green_a400"

        />

    <ListView android:id="@+id/preference_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:entries="@array/drawer_list"
        android:background="@color/green_a400"

        />




</android.support.v4.widget.DrawerLayout>
