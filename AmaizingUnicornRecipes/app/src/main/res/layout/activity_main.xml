<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/main_drawer_layout"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >




    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="16sp"
            android:text="Menu"
            android:textSize="50sp"
            android:id="@+id/menu"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="pantry"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:paddingTop="112sp"
            android:paddingBottom="56sp"
            >
            <Button
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:text="Pantry"
                android:id="@+id/goToPantry"
                android:layout_weight="1"
                android:textColor="@color/light_blue"
                android:layout_marginBottom="16sp"
                />

            <Button
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:text="Profile"
                android:id="@+id/profile"
                android:layout_weight="1"
                android:layout_marginBottom="16sp"
                android:textColor="@color/red_700"

                />

            <Button
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:text="Edit Ingredients"
                android:id="@+id/to_edit_ingredients_button"
                android:layout_weight="1"
                android:textColor="@color/yellow_a200"
                />

        </LinearLayout>


    </RelativeLayout>

    <!--<ListView-->
        <!--android:id="@+id/mainList"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="left"-->
        <!--android:entries="@array/drawer_list"-->
        <!-->-->
    <!--</ListView>-->

    <ListView android:id="@+id/nav_drawer"
        android:layout_width="240sp"
        android:layout_height="match_parent"
        android:paddingTop="16sp"
        android:paddingLeft="16sp"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12sp"
        android:entries="@array/drawer_list"
        android:background="@color/green_a400"

        />




</android.support.v4.widget.DrawerLayout>
