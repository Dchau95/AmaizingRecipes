<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/add_button_string"
        android:id="@+id/pantry_add_button"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pantry_item_edit_text"
        android:layout_toLeftOf="@id/pantry_add_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"/>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pantry_add_button"
        android:id="@+id/pantry_grid_view"
        android:numColumns="2"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

</RelativeLayout>