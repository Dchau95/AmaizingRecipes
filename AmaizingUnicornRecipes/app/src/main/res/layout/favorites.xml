<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngredientsPage">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/favoritesList"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/deleteField"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteField"
            android:width="275dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/deleteButton"
            android:layout_toStartOf="@+id/deleteButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:id="@+id/deleteButton"
            android:layout_alignTop="@+id/deleteField"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="deleteButtonClicked" />
    </RelativeLayout>

    <ListView android:id="@+id/nav_drawer"
        android:layout_width="240sp"
        android:layout_height="match_parent"
        android:paddingTop="16sp"
        android:paddingLeft="16sp"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12sp"
        android:entries="@array/drawer_list"
        android:background="@color/green_a400"
        />
</android.support.v4.widget.DrawerLayout>