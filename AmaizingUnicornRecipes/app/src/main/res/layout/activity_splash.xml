<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Splash"
    android:background="@drawable/kitchen"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="@string/splash_title"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:backgroundTint="#000000"
        android:backgroundTintMode="add"
        android:gravity="center"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splashImage"
        android:src="@drawable/amaizeing"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/corn_talk"
        android:src="@drawable/donuttext"
        android:layout_alignStart="@id/splashImage"
        android:layout_marginStart="-48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="208dp"
        android:visibility="invisible"/>


</RelativeLayout>
